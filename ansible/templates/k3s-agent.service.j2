[Unit]
Description=Lightweight Kubernetes
Documentation=https://k3s.io
After=network-online.target
Wants=network-online.target

[Service]
Type=notify
Environment="KUBELET_EXTRA_ARGS=--root-dir=/var/lib/kubelet"
Environment="KUBELET_ROOT_DIR=/var/lib/kubelet"
ExecStart=k3s agent --config /k3s/config.yaml
KillMode=process
Delegate=yes
LimitNOFILE=infinity
LimitNPROC=infinity
LimitCORE=infinity
TasksMax=infinity
TimeoutStartSec=0
Restart=always
RestartSec=5s

[Install]
WantedBy=multi-user.target 