{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "argocd": {
    "managerFilePatterns": [
      "k8s/applications/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "argocd"
      ],
      "enabled": true
    }
  ]
}
